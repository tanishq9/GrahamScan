<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center|top"
        android:paddingTop="60dp"
        android:src="@drawable/gscan"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Graham Scan"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/desc"
        android:lineSpacingExtra="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Given a set of points in the plane,the convex hull of the set is the smallest convex polygon that contains all the points of it.. Worst case time complexity of Jarvis’s Algorithm is O(n^2).Using Graham’s scan algorithm, we can find Convex Hull in O(nLogn) time. "
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="18dp" />
</LinearLayout>